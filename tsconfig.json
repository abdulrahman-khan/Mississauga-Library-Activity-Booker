{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["dom", "dom.iterable", "es6"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": false,
    "outDir": "./dist",
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "declaration": false,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/components/*": ["./components/*"],
      "@/hooks/*": ["./hooks/*"],
      "@/api/*": ["./api/*"],
      "@/pages/*": ["./pages/*"],
      "@/types/*": ["./types/*"]
    }
  },
  "include": [
    "main.ts",
    "preload.ts",
    "api/**/*.ts",
    "types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "out",
    "dist",
    ".next",
    "pages/**/*",
    "components/**/*"
  ]
}